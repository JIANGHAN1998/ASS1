# Database Configuration
# Copy this file to .env and fill in your actual database credentials

# MySQL Database Host (Azure MySQL server hostname)
DB_HOST=your-mysql-server.mysql.database.azure.com

# Database Username
DB_USER=your-username

# Database Password
DB_PASSWORD=your-password

# Database Port (default: 3306)
DB_PORT=3306

# Enable SSL for Azure MySQL (recommended: true)
DB_SSL=true

# Server Port (default: 3000)
PORT=3000

# CORS Origins (comma-separated, leave empty to allow all)
ALLOWED_ORIGINS=

